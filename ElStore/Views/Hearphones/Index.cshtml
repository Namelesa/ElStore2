@model List<ElStore.Models.ViewModel.ProductVM>

@if (Model.Count() != 0)
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <h5 class="card-title text-center">@product.Product.Brand @product.Product.Model</h5>
                    @foreach (var imageUrl in product.Image)
                    {
                        <img src="@imageUrl" class="card-img-top" alt="Image">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Product.ShortDescription</h5>
                        <p class="card-text">@product.Product.Price $</p>
                        <a href="#" class="btn btn-primary">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">Hearphones</p>
    <p class="text-center">No product in this category :(</p> 
}