@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ElStore.Models.ViewModel.ProductVM>

@if (Model.Count() != 0)
{
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card">
                    <div id="carousel-@product.Product.Id" class="carousel slide" data-bs-interval="false">
                        <div class="carousel-indicators">
                            @for (var i = 0; i < Math.Min(3, product.Image.Count()); i++)
                            {
                                <button type="button" data-bs-target="#carousel-@product.Product.Id" data-bs-slide-to="@i" class="@((i == 0) ? "active" : "")" aria-current="true" aria-label="Slide @(i + 1)"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @foreach (var imageUrl in product.Image.Take(3))
                            {
                                <div class="carousel-item @(imageUrl == product.Image.First() ? "active" : "")">
                                    <div class="p-3">
                                        <img src="@imageUrl" class="d-block w-100 img-fluid rounded" style="max-width: 100%; max-height: 100%; object-fit: cover;" alt="Image">
                                    </div>
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@product.Product.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@product.Product.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            <a asp-action="Details" asp-route-id="@product.Product.Id" class="text-decoration-none text-dark">@product.Product.Brand @product.Product.Model</a>
                        </h5>
                        <h5 class="card-title text-center">@product.Product.ShortDescription</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="card-text">@product.Product.Price$</p>
                            <button class="btn btn-primary">Buy</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">Headphones</p>
    <p class="text-center">No product in this category :(</p> 
} 
